<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kamobi.Views.AddFriendsPage">
    <ContentPage.Content>
        
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand">
                <Label Text='Type in the full name (name + "#" + 4 digit code) or an international phone number of a friend you would like to add.' />
                <Entry x:Name="FriendRequestName" Placeholder="Full name or international phone number."/>
                <Button Text="Send request" Clicked="AddFriendClicked"></Button>



            </StackLayout>
            <Label Text="Your current friends:"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"/>
            <ListView ItemsSource="{Binding FriendsList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding username}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    