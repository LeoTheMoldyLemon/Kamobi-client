<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kamobi.Views.ProfilePage">
   
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal" Margin="15, 60, 15, 0">

                <Button Text="Make a profile" 
                    VerticalOptions="Start" 
                    HorizontalOptions="StartAndExpand" 
                    Style="{StaticResource BasicButton}"/>


                <Image Source="user_profile.png"
                       Margin="0, 0, 30, 0"
                       HeightRequest="100"
                       WidthRequest="100"
                       VerticalOptions="End" 
                       HorizontalOptions="End" 
                       BackgroundColor="AliceBlue"
                       
                       />

            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand">

                <Button Text="Logout" Clicked="LogoutButtonClicked" Margin="20" Style="{StaticResource BasicButton}"></Button>

            </StackLayout>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>