<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kamobi.Views.LoginPage"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Fill">
            <Label Text="Login" Style="{StaticResource Title}"/>
            <Entry Text="" x:Name="UsernameEntry" Placeholder="Enter your username or email."/>
            <Entry Text="" x:Name="PasswordEntry" Placeholder="Enter your password." IsPassword="True"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Login" Clicked="LoginButtonClicked" Style="{StaticResource BasicButton}"></Button>
                <Button Text="Register instead" Clicked="RegisterButtonClicked" Style="{StaticResource BasicButton}" WidthRequest="200" BackgroundColor="LightGray"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>