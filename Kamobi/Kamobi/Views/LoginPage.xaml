<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kamobi.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Login" FontSize="Large"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <StackLayout Orientation="Vertical" VerticalOptions="Start">
                <Label Text="Username or email: " FontSize="Medium" MinimumWidthRequest="180" Padding="20,0,0,0"/>
                <Entry Text="" x:Name="UsernameEntry" Margin="20,0,0,0" Placeholder="Enter your username or email address." HorizontalOptions="StartAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="Start">
                <Label Text="Password:" FontSize="Medium" Padding="20,0,0,0"/>
                <Entry Text="" x:Name="PasswordEntry" Margin="20,0,0,0" Placeholder="Enter your password." HorizontalOptions="StartAndExpand" IsPassword="True"/>
            </StackLayout>
            <Button Text="Login" Clicked="LoginButtonClicked"></Button>

            <Button Text="Register instead" Clicked="RegisterButtonClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>