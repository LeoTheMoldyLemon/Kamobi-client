<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kamobi.Views.EmailConfirmPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Email verification" FontSize="Large"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="infoText" Text="An email has been sent to {email} with a 4 digit code. Please enter the code below to finalize your registration." FontSize="Medium"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <StackLayout Orientation="Horizontal" VerticalOptions="Start">
                <Entry Text="" x:Name="CodeEntry" Placeholder="Your 4 digit code." HorizontalOptions="StartAndExpand" Keyboard="Numeric"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" VerticalOptions="Start">
                <Button Text="Confirm" Clicked="ConfirmButtonClicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>